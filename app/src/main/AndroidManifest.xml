<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mimming.sugarglider"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_world">

        <activity
            android:name="com.mimming.sugarglider.MenuActivity"
            android:label="@string/app_name"
            android:theme="@style/MenuTheme" />

        <activity
            android:name="com.mimming.sugarglider.StyleMenuActivity"
            android:label="@string/app_name"
            android:theme="@style/MenuTheme" />

        <activity
            android:name="com.mimming.sugarglider.SetMapZoomActivity"
            android:label="@string/app_name"
            android:theme="@style/MenuTheme" />

        <service
            android:name="com.mimming.sugarglider.MapDisplayService"
            android:label="@string/app_name"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.google.android.glass.action.VOICE_TRIGGER" />
            </intent-filter>
            <meta-data
                android:name="com.google.android.glass.VoiceTrigger"
                android:resource="@xml/show_map" />
        </service>

        <!-- This activity can be used to predictibly attach the debugger -->
        <activity
            android:name="com.mimming.sugarglider.ServiceStartActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

    </application>
</manifest>
